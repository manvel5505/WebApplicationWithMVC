@model UserLogin
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
    <body class="dhd-col">
        <div class="form_wrapper">
            <form method="post" asp-action="Login" asp-controller="Account">
            
                <h1 style="color:#212529; text-align: center">Sign in</h1>
                <hr/>
                <div>
                    <p>
                        <label asp-for="Email">Email: </label>
                        <input placeholder="Email" title="Email" maxlength="42" size="42" style="display: grid;" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </p>
                </div>
                <div>
                    <p>
                        <label asp-for="Password">Password: </label>
                        <input placeholder="Password" title="Password" maxlength="42" size="42" style="display: grid;" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </p>
                </div>
                <div class="butt-and-href">
                    <p class="coll-exp">@ViewBag.ErrorMessage</p>
                    <button class="but1-log" type="submit"><strong>Log In</strong></button>
            
                    <p style=" display: inline-block;">No account? <a class="href-animat-style" href="https://localhost:7101/Account/Register">Create one!</a></p>
                </div>
            </form>
        </div>
    </body>
</html>
