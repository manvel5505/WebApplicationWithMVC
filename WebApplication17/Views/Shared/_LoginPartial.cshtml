<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="~/css/site.css" />

@if (Context.User.Identity.Name != null)
{
    <form asp-controller="Account" asp-action="LogOut" method="post">
        <div>
            <ul class="list-items-2style">
                <li class="list-items-2">
                    Hello @Context.User.Identity.Name!
                </li>
                <li class="list-items-2">
                     <span href=""><img src="~/images/userlogo.png" width="45" height="45" onclick="openNav()" /></span>
                     <span id="main"></span>
                </li>
            </ul>
        </div>
    </form>
}
else
{
    <ul class="navbar-nav flex-grow-1">
        <li class="list-items">
            <a class="list-items-style" asp-controller="Account" asp-action="Register"><h5 class="title-main-col">Create</h5></a>
        </li>
        <li class="list-items">
            <a class="list-items-style" asp-controller="Account" asp-action="Login"><h5 class="title-main-col">Sign in</h5></a>
        </li>
    </ul>
}
